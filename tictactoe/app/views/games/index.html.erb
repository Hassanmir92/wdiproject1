<p id="notice"><%= notice %></p>

<h1>All Games</h1>

<%= link_to 'New Game', new_game_path, class: 'success button' %>

<table>
  <thead>
    <tr>
      <th>Player 1</th>
      <th>Player 2</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= User.find(game.user1_id).username %></td>
        <td><%= User.find(game.user2_id).username %></td>
        <% if game.game_finished %>
        <td>Completed</td>
        <% else %>
        <td>Ongoing</td>
        <% end %>
        <td><%= link_to 'Show Game', game %></td>
        <% if game.user1_id == current_user.id %>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


