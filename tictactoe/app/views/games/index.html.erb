<p id="notice"><%= notice %></p>

<h1>All Fights</h1>

<%= link_to 'New Fight', new_game_path, class: 'alert button' %>

<table>
  <thead>
    <tr>
      <th>Fighter 1</th>
      <th>Fighter 2</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= User.find(game.user1_id).username %></td>
        <td><%= User.find(game.user2_id).username %></td>
        <% if game.game_won %>
        <td>Winner: <%= User.find(game.game_winner).username %></td>
        <% elsif game.game_draw %>
        <td>Draw</td>  
        <% else %>
        <td>Ongoing</td>
        <% end %>
        <td><%= link_to 'Show Fight', game %></td>
        <% if game.user1_id == current_user.id %>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


